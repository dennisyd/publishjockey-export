$endif$

% Spacing
$if(setspace)$
\usepackage{setspace}
\setstretch{$setspace$}
$endif$

% FIXED: Typography optimizations for Indic scripts
% Better line spacing for Tamil/Indic readability
\linespread{1.08}  % Reduced from 1.15 - Indic scripts need tighter line spacing
\setlength{\parindent}{1.5em}
\setlength{\parskip}{0.3em plus 0.2em minus 0.1em}  % Tighter paragraph spacing

% FIXED: Word and line break optimization for Indic scripts
\tolerance=1500  % FIXED: Much tighter tolerance for better word spacing
\pretolerance=100  % FIXED: Lower pretolerance for consistent spacing
\hyphenpenalty=10000  % FIXED: Completely disable hyphenation for Indic scripts
\exhyphenpenalty=10000
\widowpenalty=10000
\clubpenalty=10000
\displaywidowpenalty=10000

% FIXED: More conservative spacing for Indic scripts
\setlength{\emergencystretch}{1.5em}  % Reduced emergency stretch
\raggedbottom

% FIXED: Remove \sloppy - it causes poor word spacing in Indic scripts
% \sloppy  % REMOVED - causes uneven spacing

% Better justification for Indic text
\parfillskip=0pt plus 1fil

% Tightlist environment
\providecommand{\tightlist}{%
  \setlength{\itemsep}{0pt}\setlength{\parskip}{0pt}}

% Section numbering
$if(secnumdepth)$
\setcounter{secnumdepth}{$secnumdepth$}
$endif$

% TOC depth
$if(tocdepth)$
\setcounter{tocdepth}{$tocdepth$}
$endif$

